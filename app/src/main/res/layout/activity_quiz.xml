<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/home_quiz"
    tools:context=".paciente.juegos.QuizActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Pregunta 3/10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:id="@+id/question_indicator_textview"/>
    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/primary"
        tools:progress="30"
        android:id="@+id/quiz_progress_indicator"/>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:elevation="4dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/question_textview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/custom_edittext"
                android:backgroundTint="@color/secondary_variant"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/colorTitle"
                android:padding="8dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                android:text="1"
                android:textColor="@color/colorTitle"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                android:text="2"
                android:textColor="@color/colorTitle"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                android:text="3"
                android:textColor="@color/colorTitle"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                android:text="4"
                android:textColor="@color/colorTitle"
                android:textSize="18sp" />

            <Button
                android:id="@+id/next_question_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginVertical="4dp"
                android:backgroundTint="@color/primary"
                android:paddingHorizontal="40dp"
                android:paddingVertical="12dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/QuizNext"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>